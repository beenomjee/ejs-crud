<div class="container">
  <div class="top">
    <h2>Create New Task</h2>
  </div>
  <div class="bottom">
    <form action="/add" method="post">
      <label for="message">Message:</label>
      <input
        type="text"
        name="message"
        id="message"
        placeholder="Enter Message..."
        required
      />
      <button type="submit">Add Task</button>
    </form>
  </div>
</div>
